<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ui2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.upc.eetac.dsa.calculadora2.UI2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Historial"
        android:textSize="20dp"
        android:id="@+id/tvHistorial"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape"
        android:padding="10dp"
        android:layout_below="@+id/tvHistorial"
        android:id="@+id/tvOperacions">

    </TextView>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Escollir cÃ lcul (n. fila)"
        android:layout_below="@+id/tvOperacions"
        android:layout_marginTop="10dp"
        android:inputType="phone"
        android:digits="1234567890"
        android:background="@drawable/shape"
        android:padding="10dp"
        android:id="@+id/BuscarOperacio" />
    
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retorna"
        android:id="@+id/btRetorna"
        android:layout_below="@+id/tvOperacions"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        android:onClick="onClickRetorna"/>
    
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esborrar Historial"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/BuscarOperacio"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="onClickBorraHistorial"/>

</RelativeLayout>
